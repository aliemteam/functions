{
    "compilerOptions": {
        "module": "commonjs",
        "target": "es2017",
        "lib": ["es2017", "esnext.asynciterable"],

        "strict": true,
        "noImplicitAny": true,
        "noImplicitThis": true,
        "noUnusedLocals": true,
        "noUnusedParameters": true,
        "noImplicitReturns": true,
        "noFallthroughCasesInSwitch": true,

        "esModuleInterop": true,
        "alwaysStrict": true
    }
}
